rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // User profiles - users can read their own, admins can read all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Courses - readable by all, writable by admin
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Programs - readable by all, writable by admin
    match /programs/{programId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Subjects - readable by all, writable by admin
    match /subjects/{subjectId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Chapters - readable by all, writable by admin
    match /chapters/{chapterId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Quizzes - readable by all authenticated users
    match /quizzes/{quizId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.createdBy) || isAdmin();
      allow delete: if isOwner(resource.data.createdBy) || isAdmin();
    }
    
    // Quiz attempts - users can read their own attempts
    match /attempts/{attemptId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isAdmin();
    }
    
    // Leaderboard entries - readable by all, only system can write
    match /leaderboard/{entryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Badges - readable by all, only system can write
    match /badges/{badgeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // User badges - users can read their own
    match /userBadges/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }
    
    // Notifications - users can read and update their own
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow update: if isOwner(resource.data.userId);
      allow create: if isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
  }
}
